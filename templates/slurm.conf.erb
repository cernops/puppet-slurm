# COMPUTE NODES

<% @workernodes.each do |workernode| %>
<% workernode.each_pair do |key, value| -%>
<%= key %>=<%= value -%><%= ' '-%>
<% end %>
<% end %>

# PARTITIONS
<% @partitions.each do |partition| %>
<% partition.each_pair do |key,value| -%>
<%= key %>=<%= value -%><%= ' ' -%>
<% end %>
<% end %>
